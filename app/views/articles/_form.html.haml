= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :config
    = f.text_field :config
  .field
    = f.label :style
    = f.text_field :style
  .actions
    = f.submit 'Save'
